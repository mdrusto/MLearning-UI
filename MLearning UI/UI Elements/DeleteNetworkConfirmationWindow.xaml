<Window x:Class="MLearning_UI.UI_Elements.DeleteNetworkConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MLearning_UI.UI_Elements"
        mc:Ignorable="d"
        Title="Confirm" Height="115" Width="300" Topmost="True" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" Height="70" Margin="0,0,0,0" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <TextBlock Text="Are you sure you want to delete this network?" Height="30" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <DockPanel Height="20" LastChildFill="False">
            <Button Content="OK" Height="20" VerticalAlignment="Top" Width="110" Margin="0,0,25,0" Click="OKButton_Click"/>
            <Button Content="Cancel" Height="20" VerticalAlignment="Top" Width="110" Click="CancelButton_Click"/>
        </DockPanel>
    </StackPanel>

</Window>
